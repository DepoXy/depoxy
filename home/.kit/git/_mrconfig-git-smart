infuse =
  mr -d . -n infusePostRebase
  #
  link_private_exclude "$@"
updateDeps =
  update_deps_shoilerplate

# Interactive Git patch injector.
[${GITREPOSPATH:-${DOPP_KIT:-${HOME}/.kit}/git}/git-veggie-patch]
