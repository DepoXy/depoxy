_infuseProjlns () {
  local proj_path="${1:-/}"

  local no_recurse=""
  if [ "${proj_path}" != "/" ]; then
    no_recurse="-n"
  fi

  mr -d "${proj_path}" ${no_recurse} infuseProjlns
}

_infuseProjlns "$@"

