[alias]

  same = "!f() { \
    if [ -z \"$1\" ]; then \
      >&2 echo \"ERROR: Please specify a diff ref (aka HEAD recognizes HEAD)\"; \
      \
      exit 1; \
    fi; \
    if git diff --quiet $1; then \
      echo 'Same'; \
      \
      return 0; \
    else \
      echo 'Not so Same'; \
      \
      return 1; \
    fi; \
  }; f"

