[alias]

  wire-for-work = "!f() { \
    local remote=${2:-origin}; \
    local upstream_head=$(git remote show ${remote} | grep 'HEAD branch' | cut -d' ' -f5); \
    git checkout -b $1; \
    git branch -u ${remote}/${upstream_head}; \
  }; f"
  new = wire-for-work

