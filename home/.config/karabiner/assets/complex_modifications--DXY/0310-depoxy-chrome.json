{
  "title": "#1310 — Google Chrome — Global Hotkeys, and Wire Ctrl-Click and F5 like Linux",
  "rules": [

    {
      "description": "#1318 — Google Chrome — Customize Ctrl-PageUp/PageDown (originallay cycles tabs, just like Ctrl-Tab/Ctrl-Shift-Tab; but we want textarea motion userscript to process)",
      "manipulators": [
        {
          "from": {
            "key_code": "page_up",
            "modifiers": { "mandatory": [ "left_control" ] }
          },
          "to": {
            "key_code": "page_up",
            "modifiers": [ "left_option" ]
          },
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [ "^com\\.google\\.Chrome" ]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "page_down",
            "modifiers": { "mandatory": [ "left_control" ] }
          },
          "to": {
            "key_code": "page_down",
            "modifiers": [ "left_option" ]
          },
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [ "^com\\.google\\.Chrome" ]
            }
          ],
          "type": "basic"
        }
      ]
    }

  ]
}

